<div class="container d-flex flex-column justify-content-center">
  <% if user_signed_in? %>
    <div class="d-flex flex-column justify-content-between align-items-between" style="height: 80vh">
      <h1 class="mb-3">Stores</h1>

      <div>
        <% @stores.each do |store| %>
        <div class="card mb-1">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <img src="<%=store.icon %>", alt="Icon pic", height="40px">
              </div>
              <div class="col">
                <%= link_to store.name, store_path(store) %>
              </div>
              <div class="col">
                $<%= store.items.sum(:amount) %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    </div>
    <%= link_to "Add new store", new_store_path, class: "btn btn-success mt-3" %>
  </div>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary mb-2" %><br>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-info" %>
  <% end %>
</div>